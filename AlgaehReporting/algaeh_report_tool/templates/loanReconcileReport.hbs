{{{importStyle 'css/algaehReportStyles.css'}}}

<body>
    <div class="print-body">

        <section>
                <h3>Reconciliation Report For: {{header.deducting_month}}-{{header.year}}</h3>
            <table class="tableForData" cell-padding="0">
                <thead>
                    <tr>
                        <th>Sl No.</th>
                        <th>Employee Code</th>
                        <th>Employee Name</th>
                        <th>Salary Number</th>
                        <th>Loan Number</th>
                        <th>Loan Type</th>
                        <th>Approved Amount</th>
                        <th>Opening Balance</th>
                        <th>Deducting Amount</th>
                        <th>Closing Balance</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each result}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td>{{employee_code}}</td>
                        <td>{{full_name}}</td>
                        <td>{{salary_number}}</td>
                        <td>{{loan_application_number}}</td>
                        <td>{{loan_description}}</td>
                        <td  class="numberFld" excelalignment='{"vertical":"middle","horizontal":"right"}'>{{approved_amount}}</td>
                        <td  class="numberFld" excelalignment='{"vertical":"middle","horizontal":"right"}'>{{balance_amount}}</td>
                        <td  class="numberFld" excelalignment='{"vertical":"middle","horizontal":"right"}'>{{loan_due_amount}}</td>
                        <td  class="numberFld" excelalignment='{"vertical":"middle","horizontal":"right"}'>{{pending_loan}}</td>
                    </tr>
                    {{/each }}
                    <tr class="numberFld numberFldTotalBottom">
                        <td colspan="6" class="txtFld"></td>
                        <td class="numberFld" excelalignment='{"vertical":"middle","horizontal":"right"}'>{{total_approved_amount}}</td>
                        <td class="numberFld" excelalignment='{"vertical":"middle","horizontal":"right"}'>{{total_balance_amount}}</td>
                        <td class="numberFld" excelalignment='{"vertical":"middle","horizontal":"right"}'>{{total_loan_due_amount}}</td>
                        <td class="numberFld" excelalignment='{"vertical":"middle","horizontal":"right"}'>{{total_pending_loan}}</td>
                    </tr>
                </tbody>
            </table>
        </section>
        {{!-- <footer>{{{loadPage 'doctor_signature_footer.hbs' header}}}</footer> --}}
    </div>
</body>