{{{importStyle 'css/algaehReportStyles.css'}}}

<body>
    <div class="print-body">

        <table class="tableForData" cell-padding="0">
            <thead>
                <tr>
                    <th>Total Sales in Cash</th>

                    <th>Total Sales in Card</th>

                    <th>Total Sales in Cheque</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{numberFormating total_cash currencyOnly}}</td>
                    <td>{{numberFormating total_card currencyOnly}}</td>
                    <td>{{numberFormating total_check currencyOnly}}</td>
                </tr>
            </tbody>
        </table>

        <table class="tableTotal">
            <tr class="">
                <td>Total Sales Invoice Amt.</td>
                <td>{{numberFormating total_collection currencyOnly}}</td>
                <td>إجمالي المبيعات</td>
            </tr>
            <tr class="">
                <td>Total Return Invoice Amt.</td>
                <td>{{numberFormating total_returned currencyOnly}}</td>
                <td>إجمالي العائد المبلغ</td>
            </tr>
            <tr class="">
                <td>Total Income Amount</td>
                <td>{{numberFormating income currencyOnly}}</td>
                <td>إجمالي الدخل</td>
            </tr>

        </table>


    </div>
</body>