{{{importStyle 'css/creditinvoice.css'}}}
<div class="print-body">
    <section>
        <table class="tableForLabel" cell-padding="0">
            <tr>
                <td><label>رقم الملف الطبي / Patient Reg. Number</label></td>
                <td> <span>{{patient_code}}</span></td>
                <td><label>اسم المريض / Patient Name</label></td>
                <td><span>{{patient_name}}</span></td>
            </tr>

            <tr>
                <td><label> اسم الطبيب المرجعي / Doctor Ordered by</label></td>
                <td> <span>{{doctor_name}}</span></td>

                <td><label> اسم الطبيب المرجعي / Ordered Date</label></td>
                <td> <span>{{ordered_date}}</span></td>
            </tr>
            <tr>
                <td colspan="4" style="background:#f2f2f2;height:0px;"></td>
            </tr>
            <tr>
                <td><label>اسم اختبار / Test Name</label></td>
                <td colspan="3"> <span>{{service_name}}</span></td>
            </tr>
        </table>
    </section>
    <section>
        <table class="tableForLabel" cell-padding="0">
            <tr>
                <td><label>Growth Type</label></td>
                <td> <span>{{bacteria_type}}</span></td>
                <td><label>Organism Type</label></td>
                <td><span>{{organism_type}}</span></td>
                <td><label>Bacteria Name</label></td>
                <td><span>{{bacteria_name}}</span></td>
            </tr>
        </table>
    </section>
    <section>

        <table class="tableForData" cell-padding="0">
            <thead>
                <tr>
                    <th>Sl No.</th>
                    <th>Antibiotic Name</th>
                    <th>S</th>
                    <th>I</th>
                    <th>R</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="6" class="tableSubHdg"><small>Specimen Name:</small>
                        {{specimen}}</td>
                </tr>
                {{#each details}}


                <tr>
                    <td>{{inc @index}}</td>
                    <td>{{antibiotic_name}}</td>
                    <td>{{susceptible}}</td>
                    <td>{{intermediate}}</td>
                    <td>{{resistant}}</td>
                </tr>


                {{/each}}
                <tr>
                    <td colspan="6">
                        <h5>Remarks</h5>{{comments}}
                    </td>
                </tr>
                <tr>
                    <td>Validated By:</td>
                    <td colspan="5">{{validated_by}}</td>
                </tr>
            </tbody>
        </table>
    </section>

    <footer>{{{loadPage 'doctor_signature_footer.hbs' details}}}</footer>
</div>