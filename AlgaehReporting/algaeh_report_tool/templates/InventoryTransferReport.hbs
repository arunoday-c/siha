                    </tr>
                </thead>
                <tbody>
                    {{#hasElement result}}

                    {{#each result}}
                    <tr>
                        <td colspan="4" class="tableSubHdg">{{transfer_number}} - {{transfer_date}}
                        </td>
                        <td  colspan="3" class="tableSubHdg numberFld">{{from_location}} > {{to_location}}</td>
                    </tr>
