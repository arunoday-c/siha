                        <td colspan="6"></td>
                        <td class="numberFld"><b>{{sum_total_net_extended_cost}}</b></td>
                    </tr>
                    {{/each }}
                    {{else}}
                    <tr>
                        <td colspan="7" class="noResultTextReport">No Records Found</td>
                    </tr>{{/hasElement }}
