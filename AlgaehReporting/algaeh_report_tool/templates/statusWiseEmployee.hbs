    <section>
      <table class="tableForData" cell-padding="0">
        <thead>
          <tr>
            <th>Sl No.</th>
            <th>Primary ID</th>
            <th>Employee Code</th>
            <th>Employee Name</th>
            <th>Emp. Group</th>
            <th>Gender</th>
            <th>Designation</th>
            <th>Date of Joining</th>
            <th>Nationality</th>
            <th>Religion</th>
            <th>Emp. Type</th>
            <th>Emp. Status</th>

          </tr>
        </thead>
        <tbody>
          {{#hasElement result}}

            {{#each result}}
              <tr>
                <td colspan="12" class="tableSubHdg">Dept. Name:
                  {{department_name}}
                  <span class="textFloatRight">No Employees:
                    <b>{{dep_no_employee}}</b></span>
                </td>
              </tr>
              {{#each sub_dept}}
                <tr>
                  <td colspan="12" class="tableSubHdg2">Sub Dept. Name:
                    {{sub_department_name}}
                    <span class="textFloatRight">No Employees:
                      <b>{{sub_no_employee}}</b></span></td>
                </tr>
                {{#each employees}}
                  <tr>
                    <td datatype="string">{{inc @index}}</td>
                    <td datatype="string">{{identity_no}}</td>
                    <td datatype="string">{{employee_code}}</td>
                    <td style="text-align: left;">{{full_name}}</td>
                    <td>{{group_description}}</td>
                    <td>{{sex}}</td>
                    <td>{{designation}}</td>
                    <td datatype="string">{{date_of_joining}}</td>
                    <td>{{nationality}}</td>
                    <td>{{religion_name}}</td>
                    <td>{{employee_type}}</td>
                    <td>{{employee_status}}</td>
                  </tr>
                {{/each}}{{/each}}{{/each}}
          {{else}}
            <tr>
              <td colspan="12" class="noResultTextReport">No Records Found</td>
            </tr>{{/hasElement}}
        </tbody>

      </table>
    </section>
    {{!-- <footer>{{{loadPage 'doctor_signature_footer.hbs' header}}}</footer> --}}

  </div>
</body>