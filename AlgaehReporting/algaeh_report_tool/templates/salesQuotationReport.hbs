{{{importStyle 'css/algaehReportStyles.css'}}}

<body>
    <div class="print-body" style="top:10px important; z-index:9">

        <section>

            <div class="customDvSalesOrder">
                <div>
                    {{!-- <h3>Vendor Details</h3> --}}
                    <p>Quotation No:<span class="valueText">{{sales_quotation_number}}</span></p>
                    <p>Quotation Date:<span class="valueText">{{sales_quotation_date}}</span></p>
                    <p>Quotation Validty Till:<span class="valueText">{{quote_validity}}</span></p>
                </div>
                <div>
                    {{!-- <h3>Customer Details</h3> --}}
                    <p>Customer Name:<span class="valueText">{{customer_name}}</span></p>
                    <p>Sales Person Name:<span class="valueText">{{employee_name}}</span></p>
                    <p>Delivery Date:<span class="valueText">{{delivery_date}}</span></p>
                </div>

            </div>
        </section>
        {{#ifCond sales_quotation_items.length '>' 0 }}
        <section>
            <table class="tableForData" cell-padding="0">
                <thead>
                    <tr>
                        <th>Sl No.</th>
                        <th>Item Name</th>
                        <th>UOM</th>
                        <th>Unit Cost</th>
                        <th>Quantity</th>
                        <th>Ext. Cost</th>
                        <th>Disc. Amt</th>
                        <th>Net Ext. Amt.</th>
                        <th>Tax Amt.</th>
                        <th>Total Amt. </th>

                    </tr>
                </thead>
                <tbody>

                    {{#each sales_quotation_items}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td>{{item_description}}</td>
                        <td>{{uom_description}}</td>
                        <td>{{quantity}}</td>
                        <td>{{unit_cost}}</td>
                        <td>{{extended_cost}}</td>
                        <td>{{discount_amount}}</td>
                        <td>{{net_extended_cost}}</td>
                        <td>{{tax_amount}}</td>
                        <td>{{total_amount}}</td>

                    </tr>
                    {{/each }}
                </tbody>
            </table>
        </section>
        {{/ifCond}}

        {{#ifCond sales_quotation_services.length '>' 0 }}
        <section>
            <table class="tableForData" cell-padding="0">
                <thead>
                    <tr>
                        <th>Sl No.</th>
                        <th>Service Name</th>
                        <th>Frequency</th>
                        <th>Unit Cost</th>
                        <th>Quantity</th>
                        <th>Ext. Cost</th>
                        <th>Disc. Amt</th>
                        <th>Net Ext. Amt.</th>
                        <th>Tax Amt.</th>
                        <th>Total Amt. </th>

                    </tr>
                </thead>
                <tbody>

                    {{#each sales_quotation_services}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td>{{service_name}}</td>
                        <td>{{service_frequency}}</td>
                        <td class="numberFld">{{quantity}}</td>
                        <td class="numberFld">{{unit_cost}}</td>
                        <td class="numberFld">{{extended_cost}}</td>
                        <td class="numberFld">{{discount_amount}}</td>
                        <td class="numberFld">{{net_extended_cost}}</td>
                        <td class="numberFld">{{tax_amount}}</td>
                        <td class="numberFld">{{total_amount}}</td>

                    </tr>
                    {{/each }}
                </tbody>
            </table>
        </section>
        {{/ifCond}}
        <section>
            <table class="tableForLabel" cell-padding="0">
                <tr>
                    <td><label class=""><b>Terms & Conditions</b></label>:<br>
                        {{{terms_conditions }}}
                    </td>
                </tr>
            </table>
        </section>
        <div class="footerSeal"><img src="{{imageSource 'images/clientSeal.png'}}" /></div>
        {{!-- <footer>{{{loadPage 'doctor_signature_footer.hbs' header}}}</footer> --}}
    </div>
</body>