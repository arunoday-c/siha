{{{importStyle 'css/algaehReportStyles.css'}}}

<body>
<div class="print-body">
    <section>
        <table class="tableNoBorder" cell-padding="0">
        <tr>
            <td colspan="2"><h1 class="voucherHdg">Expense Voucher</h1></td>
        <tr>
        <tr>
            <td width="55%">
                <table class="tableNoBorder">
                    <tr>
                        <td  class="txtFld">
                            <p>Payment To:</p>
                            <p><b>Name Here</b></p>
                            <p><b>Address Here</b></p>
                        </td>
                    </tr>
                </table>
            </td>
            <td width="55%">
                <table class="tableNoBorder">
                    <tr>
                        <td  class="numberFld"><p>Date: <b>Date Here</b></p></td>
                    </tr>
                     <tr>
                        <td  class="numberFld"><p>Reference No: <b>#56445</b></p></td>
                    </tr>
                </table>
            </td>
        </tr>
        </table>
    </section>
        <section>
            <table class="tableForData" cell-padding="0">
                <thead>
                    <tr>
                        <th>Sl No.</th>
                        <th>Ledger</th>
                        <th>Ledger Arabic</th>
                        <th>Debit Amount</th>
                        <th>Credit Amount</th>
                        <th>Type</th>
                        <th>Payment Date</th>
                        <th>Narration</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each result}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td>{{account_name}} > {{child_name}}</td>
                        <td>{{arabic_account_name}} > {{arabic_child_name}}</td>
                        <td>{{numberFormating debit_amount ../currency}}</td>
                        <td>{{numberFormating credit_amount ../currency}}</td>
                        <td>{{payment_type}}</td>
                        <td>{{payment_date}}</td>
                        <td>{{narration_detail}}</td>
                    </tr>
                    {{/each }}

                </tbody>
            </table>
        </section>
        {{!-- <footer>{{{loadPage 'doctor_signature_footer.hbs' header}}}</footer> --}}
    </div>
</body>