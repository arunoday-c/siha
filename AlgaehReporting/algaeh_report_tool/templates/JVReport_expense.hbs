{{{importStyle 'css/algaehReportStyles.css'}}}

<body>
<div class="print-body">
    <section>
        <table class="tableNoBorder" cell-padding="0">
        <tr>
            <td colspan="2"><h1 class="voucherHdg">Expense Voucher</h1></td>
        <tr>
            
        <tr>
             <td width="50%">
                <table class="tableNoBorder">
                    <tr>
                        <td  class="txtFld">
                            <p>Payment From:</p>
                            <p><b>{{resultHeader.ledger_code}}</b>/<b>{{resultHeader.child_name}} / {{resultHeader.arabic_child_name}}</b></p>
                            <p></p>
                            <p><b>{{numberFormating resultHeader.credit_amount currencyHeader}}</b></p>
                        </td>
                    </tr>
                </table>
            </td>
           
            <td width="50%">
                <table class="tableNoBorder">
                    <tr>
                        <td  class="numberFld"><p>Date: <b>{{resultHeader.payment_date}}</b></p></td>
                    </tr>
                     <tr>
                        <td  class="numberFld"><p>Reference No: <b>{{resultHeader.voucher_no}}</b></p></td>
                    </tr>
                </table>
            </td>
        </tr>
       
        </table>
    </section>
        <section>
             <p><b>Payment To:</b></p>
            <table class="tableForData" cell-padding="0">
                <thead>
                    <tr>
                        <th>Sl No.</th>
                        <th>Cost Center</th>
                        <th>Ledger Code</th>
                        <th>Ledger</th>
                        <th>Ledger Arabic</th>
                        <th>Debit Amount</th>
                        {{!-- <th>Credit Amount</th> --}}
                        {{!-- <th>Type</th> --}}
                        {{!-- <th>Payment Date</th> --}}
                       <th width="25%">Narration</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each resultInvoice}}
                 <tr>
                        <td>{{inc @index}}</td>
                        <td>{{cost_center_name}}</td>
                        <td>{{ledger_code}}</td>
                        <td class="txtFld">{{child_name}}</td> {{!--{{account_name}} >  --}}
                        <td class="numberFld">{{arabic_child_name}}</td> {{!--{{arabic_account_name}} >  --}}
                        <td class="numberFld">{{numberFormating debit_amount ../currency}}</td>
                        {{!-- <td class="numberFld">{{numberFormating credit_amount ../currency}}</td> --}}
                        {{!-- <td>{{payment_type}}</td> --}}
                        {{!-- <td>{{payment_date}}</td> --}}
                        <td>{{narration_detail}}</td>
                    </tr>
                    {{/each }}

 <tr>
                        <td class="numberFld"  colspan="5">Sub Total: </td>
                        <td class="numberFld"><b>{{numberFormating totalDr ./currency}}</b></td>
                        {{!-- <td class="numberFld"><b>{{numberFormating totalCr ./currency}}</b></td> --}}
                        <td></td>
                    </tr>
                </tbody>
            </table>
            <br>
            <table class="tableNoBorder">
                <tr class="footerTotalUp">
                    <td class="txtFld"><b>Memo:</b>
                    <p>{{resultHeader.narration_head}}</p></td>                     
                </tr>
            </table>
        </section>
        {{!-- <footer>{{{loadPage 'doctor_signature_footer.hbs' header}}}</footer> --}}
    </div>
</body>