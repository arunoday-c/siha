{{{importStyle 'css/creditinvoice.css'}}}

<body>
    <div class="print-body">

        <section>

            <table class="tableForLabel" cell-padding="0">
                <tr>
                    <td><label>رقم التسجيل الضريبي / TRN</label></td>
                    <td> <span>{{header.tax_number}}</span></td>
                    <td><label>النوع / Type</label></td>
                    <td> <span>ائتمان/ Cash</span></td>
                </tr>
                <tr>
                    <td colspan="4" style="background:#f2f2f2;height:0px;"></td>
                </tr>
                <tr>
                    <td><label>رقم الملف الطبي / Reg. Number</label></td>
                    <td> <span>{{header.patient_code}}</span></td>
                    <td><label>رقم الفاتورة / Invoice No</label></td>
                    <td> <span>{{header.invoice_number}}</span></td>
                </tr>

                <tr>
                    <td><label>اسم المريض / Patient Name</label></td>
                    <td> <span>{{header.patient_full_name}}</span></td>
                    <td><label>اريخ الفاتورة / Invoice Date</label></td>
                    <td> <span>{{header.invoice_date}}</span></td>
                </tr>

                <tr>
                    <td><label>اسم الطبيب / Doctor</label></td>
                    <td> <span>{{header.full_name}}</span></td>
                    <td><label>Department / القسم</label></td>
                    <td> <span>{{header.sub_department_name}}</span></td>
                </tr>
            </table>


        </section>
        <section>
            <table class="tableForData" cell-padding="0">
                <thead>
                    <tr>
                        <th>SERVICE DESCRIPTION</th>
                        <th>QUANTITY</th>
                        <th>PRICE</th>
                        <th>NET AMOUNT</th>
                        <th>PATIENT RESP.</th>
                        <th>PATIENT TAX</th>
                        <th>PATIENT PAYABLE</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each detail}}
                    <tr>
                        <td colspan="9" class="tableSubHdg">{{service_type}}</td>
                    </tr>
                    <tr>
                        <td>{{service_name}}</td>
                        <td>{{quantity}}</td>
                        <td>{{price}}</td>
                        <td>{{net_amount}}</td>
                        <td>{{patient_resp}}</td>
                        <td>{{patient_tax}}</td>
                        <td>{{patient_payable}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
        <footer>{{{loadPage 'doctor_signature_footer.hbs' header}}}</footer>
    </div>
</body>
