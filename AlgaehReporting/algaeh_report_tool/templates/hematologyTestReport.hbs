{{{importStyle 'css/algaehReportStyles.css'}}}
<div class="print-body">
    <section>
        <table class="tableForLabel" cell-padding="0">
            <tr>
                <td><label>رقم الملف الطبي / MRN Number</label></td>
                <td> <span>{{header.patient_code}}</span></td>
                <td><label>اسم المريض / Patient Name</label></td>
                <td><span>{{header.patient_name}}</span></td>
            </tr>
            <tr>
                <td><label>عمر / Age</label></td>
                <td><span>{{header.age_in_years}} Years/ {{header.age_in_months}} Months/ {{header.age_in_days}}
                        Days</span></td>

                <td><label>جنس / Gender</label></td>
                <td> <span>{{header.gender}}</span></td>

            </tr>
            <tr>
                <td><label> أمر بواسطة / Ordered by</label></td>
                <td> <span>{{header.doctor_name}} - {{header.sub_department_name}}</span></td>

                <td><label> اسم الطبيب المرجعي / Ordered Date</label></td>
                <td> <span>{{header.ordered_date}}</span></td>
            </tr>
            <tr>
                <td colspan="4" style="background:#f2f2f2;height:0px;"></td>
            </tr>
            <tr>
                <td><label>اسم اختبار / Test Name</label></td>
                <td> <span>{{header.service_name}} </span></td>

                <td><label>فئة الاختبار / Test Category</label></td>
                <td> <span>{{header.category_name}} </span></td>



                {{!-- {{#if header.critical_status "Y"}} <b style="color:red;">
                            (Critical Result)
                        </b> {{/if}} --}}
            </tr>
        </table>
    </section>
    <section>

        <table class="tableForDataNoBorder" cell-padding="0">
            <thead>
                <tr>
                    {{!-- <th>Sl No.</th> --}}
                    <th class="txtFld">Analyte</th>
                    <th>Result</th>
                    <th>Normal Range</th>
                    <th>Unit</th>
                    {{!-- <th>Critical Range</th> --}}
                </tr>
            </thead>
            <tbody class="analyteResult">

                {{#each details}}
                <tr>
                    <td colspan="4" class="tableSubHdg">
                        {{firstElement groupDetail 0 "investigation_name"}}</td>
                </tr>
                {{#each groupDetail}}
                <tr>
                    {{!-- <td>{{inc @index}}</td> --}}
                    <td class="txtFld" style="width: 55%">{{analyte_name}}</td>
                    <td data-value="{{critical_type}}">{{result}} <sup>{{critical_type}}</sup></td>
                    <td>{{normal_low }} - {{normal_high}}</td>
                    <td>{{result_unit}}</td>
                    {{!-- <td class="numberFld">{{critical_low}} - {{critical_high}}</td> --}}
                </tr>
                {{/each}}
                {{/each}}
            </tbody>
        </table>
        <table class="tableForData">
            <tbody>
                <tr>
                    <td class="txtFld">Comments:<ol> {{#each (commentBreakUp header.comments commentBreakUp)}}
                            <li>{{this}}</li>{{/each}}
                        </ol>
                    </td>

                </tr>
                <tr>
                    <td class="txtFld">Validated By: <b>{{header.validated_by}}</b></td>

                </tr>
            </tbody>
        </table>
    </section>
    {{!-- <footer>{{{loadPage 'doctor_signature_footer.hbs' header}}}</footer> --}}
</div>