   .reportHeaderCntr {
   width: 100%;
   border-collapse: collapse;
   margin: 0 18px;
   text-align: center;
   font-family: Arial, sans-serif;
   font-weight: normal;
   }
   .reportHeaderCntr th {
   border: 0.5px solid #ccc;
   padding: 0 5px;
   margin: 0;
   font-size: 8px;
   }
   .hospitalLogo {
   text-align: center;
   width: 100px;
   }
   .hospitalLogo img {
   margin: 0;
   padding: 0;
   border: none;
   width: 100px;
   height: auto;
   }
   .reportHeaderCntr h4 {
   font-size: 11px;
   margin: 3px 0;
   padding: 0;
   }
   .reportHeaderCntr p {
   margin: 3px 0;
   padding: 0;
   }
   .showFilterValue {
   width: 100%;
   }
