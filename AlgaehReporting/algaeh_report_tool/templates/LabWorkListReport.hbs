{{{importStyle "css/algaehReportStyles.css"}}}

<body>
  <div class="print-body">

    <section>

      <table class="tableForLabel" cell-padding="0">
        <tr>
          <td colspan="3">Patient Name:<span
              class="valueText"
            >{{header.full_name}}</span></td>
        </tr>
        <tr>
          <td>Primary ID:<span class="valueText">{{header.primary_id_no}}</span>
          </td>
          <td>Patient Code:<span class="valueText">{{header.patient_code}}
            </span>
          </td>
          {{!-- <td><label class="textEnLft">Lab ID No.</label>:<span
              class="valueText"
            >{{header.lab_id_number}}</span></td> --}}

          <td><label class="textEnLft">Age/Gender</label>:<span
              class="valueText"
            >{{header.age_in_years}}/ {{header.gender}}</span></td>
        </tr>
        <tr>
          <td>Visit Number:<span class="valueText">{{header.visit_code}}</span>
          </td>
          <td>Bill Number:<span class="valueText">{{header.bill_number}}
            </span>
          </td>
          <td><label class="textEnLft">Bill Date</label>:<span
              class="valueText"
            >{{header.bill_date}}</span></td>
        </tr>
      </table>

    </section>

    <section>
      <table class="tableForData" cell-padding="0">
        <thead>
          <tr>
            <th>Sl No.</th>
            <th>Lab ID Number</th>
            <th>Investigation Name</th>
            <th>Specimen Status</th>
            <th>Test Status</th>
            <th>Work Status</th>

          </tr>
        </thead>
        <tbody>
          {{#each detail}}
            <tr>
              <td datatype="string">{{inc @index}}</td>
              <td>{{lab_id_number}}</td>
              <td class="txtFld" datatype="string">{{description}}</td>
              <td>{{specimen_status}}</td>
              <td>{{test_status}}</td>
              <td class="" style="width: 150px;"></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </section>
  </div>
</body>