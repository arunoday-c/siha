        <section>
            <table class="tableForData" cell-padding="0">
                <thead>
                    <tr>
                        <th excelwidth="10">Sl No.</th>
                        <th excelwidth="30">Employee Code</th>
                        <th>Employee Name</th>
                        <th>Nationality</th>
                        <th>Working Days</th>
                        <th>Present Days</th>
                        <th>Advance Due</th>
                        <th>Loan Due Amt</th>
                        <th>Total Earnings</th>
                        <th>Total Deductions</th>
                        <th>Net Salary</th>
                    </tr>
                </thead>
                <tbody>


                    {{#hasElement details}}
                    {{#each details}}
                    <tr style="border-top:2px dashed #000">
                        <td colspan="6" excelcellmerge="A:F" class="tableSubHdg">Department: {{department_name}}
                        </td>
                        <td colspan="5" excelcellmerge="G:K" class="tableSubHdg"><span class="textFloatRight">Total No
                                Employees:
                                <b>{{dep_no_employee}}</b></span></td>
                    </tr>

                    {{#each sub_dept}}
                    <tr style="border-top:2px dashed #000">
                        <td colspan="6" excelcellmerge="A:F" class="tableSubHdg2">Sub Department:
                            {{sub_department_name}}
                        </td>
                        <td colspan="5" excelcellmerge="G:K" class="tableSubHdg2"><span class="textFloatRight">Total No
                                Employees:
                                <b>{{sub_no_employee}}</b></span></td>
                    </tr>

                    {{#each employees}}
                    <tr>
                        <td excelalignment='{"vertical":"middle","horizontal":"center"}'>{{inc @index}}</td>
                        <td excelalignment='{"vertical":"middle","horizontal":"center"}'>{{employee_code}}</td>
                        <td excelalignment='{"vertical":"middle","horizontal":"left"}'>{{employee_name}}</td>
                        <td excelalignment='{"vertical":"middle","horizontal":"center"}'>{{nationality}}</td>
                        <td excelalignment='{"vertical":"middle","horizontal":"center"}'>{{total_days}}</td>
                        <td excelalignment='{"vertical":"middle","horizontal":"center"}'>{{display_present_days}}</td>
                        <td excelalignment='{"vertical":"middle","horizontal":"right"}'>{{advance_due}}</td>
                        <td excelalignment='{"vertical":"middle","horizontal":"right"}'>{{loan_due_amount}}</td>
                        <td excelalignment='{"vertical":"middle","horizontal":"right"}'>{{total_earnings}}</td>
                        <td excelalignment='{"vertical":"middle","horizontal":"right"}'>{{total_deductions}}</td>
                        <td excelfonts='{"bold":true}' excelalignment='{"vertical":"middle","horizontal":"right"}'>
                            {{net_salary}}</td>
                    </tr>
                    {{/each }}{{/each }}{{/each }}


                    {{else}}
                    <tr>
                        <td colspan="11" class="noResultTextReport">No Records Found</td>
                    </tr>{{/hasElement }}


                    {{!-- excelfill='{"type":"pattern","pattern":"solid","fgColor":{"argb":"FF0000"},"bgColor":{"argb":"cccccc"}}' --}}

                </tbody>
            </table>
        </section>
