        <section>
            <table class="tableForData" cell-padding="0">
                <thead>
                    <tr>
                        <th>Sl No.</th>
                        <th>Employee Code</th>
                        <th>Employee Name</th>
                        <th>Nationality</th>
                        <th>Working Days</th>
                        <th>Present Days</th>
                        <th>Advance Due</th>
                        <th>Loan Due Amt</th>
                        <th>Total Earnings</th>
                        <th>Total Deductions</th>
                    </tr>
                </thead>
                <tbody>


                    {{#hasElement details}}
                    {{#each details}}
                    <tr style="border-top:2px dashed #000">
                        <td colspan="11" class="tableSubHdg">Department: {{department_name}}
                            <span class="textFloatRight">Total No Employees: <b>{{dep_no_employee}}</b></span>
                        </td>
                    </tr>

                    {{#each sub_dept}}
                    <tr style="border-top:2px dashed #000">
                        <td colspan="11" class="tableSubHdg2">Sub Department: {{sub_department_name}}
                            <span class="textFloatRight">Total No Employees: <b>{{sub_no_employee}}</b></span>
                        </td>
                    </tr>

                    {{#each employees}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td>{{employee_code}}</td>
                        <td>{{employee_name}}</td>
                        <td>{{nationality}}</td>
                        <td>{{working_days}}</td>
                        <td>{{present_days}}</td>
                        <td>{{advance_due}}</td>
                        <td>{{loan_due_amount}}</td>
                        <td>{{total_earnings}}</td>
                        <td>{{total_deductions}}</td>
                    </tr>
                    {{/each }}{{/each }}{{/each }}


                    {{else}}
                    <tr>
                        <td colspan="8" class="noResultTextReport">No Records Found</td>
                    </tr>{{/hasElement }}




                </tbody>
            </table>
        </section>
        {{!-- <footer>{{{loadPage 'doctor_signature_footer.hbs' header}}}</footer> --}}
