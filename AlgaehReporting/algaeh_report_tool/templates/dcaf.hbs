<!doctype html>
<html lang="en">

<head>
    <style type="text/css">
        body {
            padding: 0;
            margin: 0;
            font-family: sans-serif;
            font-size: 0.9rem;
        }

        .report-container {
            height: auto;
            margin: auto;
        }

        .mainTable,
        table {
            width: 100%;
            border-collapse: collapse;
        }

        .mainTable>thead tr th {
            text-align: center;
        }

        .mainTable>tbody tr td {
            text-align: left;
            padding: 5px;

        }

        .patientDetails {
            width: 55%;
        }

        .patientDetails .innerTable {
            height: 260px;
        }

        .insuranceDetails {
            width: 45%;
        }

        .insuranceDetails .innerTable {
            height: 260px;
        }

        .otherDetails {
            width: 100%;
        }

        .innerTable {
            border: 2px solid #000;
            padding: 10px;
        }

        .innerTable tbody tr td {
            border: none;
            padding: 5px;
        }

        .innerTable tbody tr td span {
            border-bottom: 1px dotted #000;
        }

        .servicetable {
            margin: 10px 0;
        }

        .servicetable thead tr th {
            border: 1px solid #000;
            text-align: center;
            padding: 3px;
        }

        .servicetable tbody tr td {
            border: 1px solid #000;
            text-align: center;
            padding: 3px;
        }
    </style>
</head>

<body>

    <div class="report-container">
        <table class="mainTable">
            <thead>
                <tr>
                    <th colspan="2">
                        <h1>DCAF 2.0</h1>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="patientDetails">
                        <table class="innerTable">
                            <tbody>
                                <tr>
                                    <td colspan="3"><b>To be completed & ID Verified by the reception/nurse:</b></td>
                                </tr>
                                <tr>
                                    <td colspan="3">Provider Name: <span>{{header.provider_name}}</span></td>
                                </tr>
                                <tr>
                                    <td colspan="2">Insurance Company Name:
                                        <span>{{insurance.0.primary_insurance_company_name}}</span></td>
                                    <td colspan="1">TPA Company Name:
                                        <span>{{insurance.0.primary_tpa_insurance_company_name}}</span></td>
                                </tr>
                                <tr>
                                    <td colspan="3">Patient File Number: <span>{{header.patient_code}}</span></td>
                                </tr>
                                <tr>
                                    <td colspan="3">Date of Visit: <span>{{header.visit_date}}</span></td>
                                </tr>
                                <tr>
                                    <td>Plan Type ( {{#if header.patient_marital_status "Plan Type"}}
                                        <span>&#10004;</span>
                                        {{/if}}
                                        )</td>
                                    <td>New Visit ( {{#if header.new_visit_patient "Y"}}
                                        <span>&#10004;</span>
                                        {{/if}} )</td>
                                    <td>Follow Up ( {{#if header.new_visit_patient "N"}}
                                        <span>&#10004;</span>
                                        {{/if}} )</td>
                                </tr>


                            </tbody>
                        </table>
                    </td>
                    <td class="insuranceDetails">

                        <table class="innerTable">
                            <tbody>
                                <tr>
                                    <td colspan="3"><b>Print/Fill in clear letters or Emboss Card:</b></td>
                                </tr>
                                <tr>
                                    <td colspan="3">Insured Name: <span>{{header.provider_name}}</span></td>
                                </tr>
                                <tr>
                                    <td colspan="">ID.Card No.: <span>{{header.provider_name}}</span></td>
                                    <td colspan="">Sex: <span>{{header.provider_name}}</span></td>
                                    <td colspan="">Age: <span>{{header.provider_name}}Y}}</span></td>
                                </tr>
                                <tr>
                                    <td colspan="2">Policy Holder: <span>{{header.provider_name}}</span></td>
                                    <td colspan="1">Policy Number: <span>{{header.provider_name}}</span></td>
                                </tr>
                                <tr>
                                    <td colspan="2">Expiry Date: <span>{{header.provider_name}}</span></td>
                                    <td colspan="1">Class: <span>{{header.provider_name}}</span></td>
                                </tr>
                                <tr>
                                    <td colspan="3">Approval: <span>{{header.provider_name}}</span></td>

                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>

        </table>

        <table class="mainTable">
            <tbody>

                <tr>
                    <td colspan="2" class="otherDetails">
                        <table class="innerTable">
                            <tbody>
                                <tr>
                                    <td colspan="7"><b> To be completed by the Dentist:</b>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <table>
                                            <tbody>


                                                <tr>
                                                    <td>Duration Of Illness:
                                                        <span>{{header.patient_duration_of_illness}} (days)</span></td>
                                                </tr>
                                                <tr>
                                                    <td colspan="7">Chief Complaint and Main Symptoms:
                                                        <span>{{header.patient_chief_comp_main_symptoms}}</span></td>
                                                </tr>
                                                <tr>
                                                    <td colspan="7">Significant Signs:
                                                        <span>{{header.patient_significant_signs}}</span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="7">Diagnoses (ICD10):
                                                        <span>{{header.patient_significant_signs}}</span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="7">Primary:
                                                        <span>{{header.patient_significant_signs}}</span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="7">Secondary:
                                                        <span>{{header.patient_significant_signs}}</span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="7">Other Conditions:
                                                        <span>{{header.patient_other_conditions}}</span>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>

                                        <table>
                                            <tbody>
                                                <tr>
                                                    <td colspan="3"><b>Please tick (&#10004;) where appropriate:</b>
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td colspan="2">Duration Of Illness:
                                                        <span>{{header.patient_duration_of_illness}} (days)</span></td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2">Regular Dental Treatment (
                                                        {{#if header.patient_cmfi "Y"}}
                                                        <span>&#10004;</span>
                                                        {{/if}} ) | Dental Cleaning ( {{#if header.patient_cmfi "N"}}
                                                        <span>&#10004;</span>
                                                        {{/if}} )</td>
                                                </tr>
                                                <tr>
                                                    <td>Trauma Treatment Specify : RTA ( {{#if header.patient_rta "Y"}}
                                                        <span>&#10004;</span>
                                                        {{/if}} ) | Work Related (
                                                        {{#if header.patient_work_related "Y"}}
                                                        <span>&#10004;</span>
                                                        {{/if}} )</td>
                                                    <td>Other: <span>{{header.patient_other_conditions}}</span> | Other
                                                        ( {{#if header.patient_other_conditions "Y"}}
                                                        <span>&#10004;</span>
                                                        {{/if}} )</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2">How:
                                                        <span>{{header.patient_significant_signs}}</span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>When:
                                                        <span>{{header.patient_significant_signs}}</span>
                                                    </td>
                                                    <td>Where:
                                                        <span>{{header.patient_significant_signs}}</span>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                    <td style="width: 30%">
                                        Dental Picture Here
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="innerTable">
                            <tbody>

                                <tr>
                                    <td colspan="7">Suggestive line (s) of management: Kindly, enumerate the recommended
                                        investigation, and /
                                        orprocedures For outpatient approval only:</td>
                                </tr>
                                <tr>
                                    <td colspan="7">
                                        <table class="servicetable">
                                            <thead>
                                                <tr>
                                                    <th>Code</th>
                                                    <th>Description/Service</th>
                                                    <th>Type</th>
                                                    <th>Quantity</th>
                                                    <th>Cost</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each services }}
                                                <tr>
                                                    <td>{{service_code}}</td>
                                                    <td>{{service_name}}</td>
                                                    <td>{{service_type}}</td>
                                                    <td>{{service_quantity}}</td>
                                                    <td>{{service_net_amout}}</td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="7">Provider's Approval/Coding Staff must review/code the recommended
                                        service(s) and allocate
                                        cost and
                                        complete the following:</td>
                                </tr>
                                <tr>
                                    <td colspan="2">Completed/Coded By</td>
                                    <td>.........................</td>
                                    <td>Signature</td>
                                    <td>.........................</td>
                                    <td>Date</td>
                                    <td>.........................</td>
                                </tr>
                                <tr>
                                    <td colspan="7">
                                        <table class="servicetable">
                                            <thead>
                                                <tr>
                                                    <th>Medication Name (Generic Name)</th>
                                                    <th>Type</th>
                                                    <th>Quantity</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each medication}}
                                                <tr>
                                                    <td>{{generic_name}}</td>
                                                    <td>{{type}}</td>
                                                    <td>{{quantity}}</td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3">Is Case Management From ( CMFI.0 ) Included</td>
                                    <td colspan="4">Yes ( {{#if header.patient_cmfi "Y"}}
                                        <span>&#10004;</span>
                                        {{/if}} ) | No ( {{#if header.patient_cmfi "N"}}
                                        <span>&#10004;</span>
                                        {{/if}} )</td>
                                </tr>
                                <tr>
                                    <td colspan="3">Please Specify Possible line of Management When Applicable:</td>
                                    <td colspan="4">
                                        {{header.patient_cmfi_comments}}</td>
                                </tr>
                                <tr>
                                    <td colspan="4">Estimated Length of Stay:
                                        <b>{{header.patient_estimated_length_of_stay}} Days</b></td>
                                    <td colspan="3">Expected Date of Admission:
                                        <b>{{header.patient_expected_date_of_addmission}}</b></td>
                                </tr>

                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>
        <table class="mainTable">
            <tbody>
                <tr>
                    <td>
                        <table class="innerTable">

                            <tbody>

                                <tr>
                                    <td>I hereby certify that ALL information mentioned are correct and that
                                        the medical services
                                        shown on
                                        this form were medically indicated and necessary for the management of this
                                        case.</td>
                                    <td>I hereby certify that all statements and information provided
                                        concerning patient
                                        Identification and the
                                        present illness or injury are TRUE.
                                    </td>
                                </tr>

                                <tr>
                                    <td>{{header.provider_name}}</td>
                                    <td>{{header.name_relation_guardian}}</td>
                                </tr>
                                <tr>
                                    <td>Signature and Stamp</td>
                                    <td>Name and Relationship(if Guardian) Signature :</td>
                                </tr>
                                <tr>
                                    <td>{{header.physican_capture_date}}</td>
                                    <td>{{header.relation_guardian_date}}</td>
                                </tr>

                        </table>
                        <table class="innerTable">
                            <tbody>
                                <tr>
                                    <td>For Insurance Company Use Only:</td>
                                    <td>Approved: ( {{#if header.insurance_company_use_only_approved "Y"}}
                                        <span>&#10004;</span>
                                        {{/if}}
                                        )</td>
                                    <td>Not Approved: ( {{#if header.insurance_company_use_only_not_approved "Y"}}
                                        <span>&#10004;</span> {{/if}} )</td>
                                    <td>Approval No: {{header.insurance_company_use_only_approval_no }}</td>
                                    <td colspan="2">Approval validity:
                                        {{header.insurance_company_use_only_approval_validity_days}} Days</td>
                                </tr>
                                <tr>
                                    <td colspan="6">Comments (include approved days/services if different from the
                                        requested):</td>
                                </tr>
                                <tr>
                                    <td colspan="6">{{header.insurance_company_use_only_comments}} </td>
                                </tr>
                                <tr>
                                    <td>Approved/Disapproved By:</td>
                                    <td>{{header.insurance_company_use_only_approved_by}}</td>
                                    <td>Signature:</td>
                                    <td>..........................................................</td>
                                    <td>Date</td>
                                    <td>{{header.insurance_company_use_only_approved_date}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

</body>

</html>