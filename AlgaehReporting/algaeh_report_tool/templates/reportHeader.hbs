            </th>
        </tr>
        <tr>
            <th>
                <p>{{hospital_address}}</p>
            </th>
        </tr>
        {{!-- <tr>
            <th>
                <p>Report Generated Date: {{currentDateTime 'date'}}</p>
            </th>
        </tr> --}}
        <tr>
            <th>
                <p class="showFilterValue">{{#each filter}}
                    <span><small>{{label}}:</small>{{labelValue}} </span>
                    {{/each }}</p>
            </th>
        </tr>


    </table>

</body>