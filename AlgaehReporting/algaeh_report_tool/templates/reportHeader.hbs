<style type="text/css">
    .reportHeaderCntr {

        width: 100%;
        border-collapse: collapse;
        margin: 0 18px;
        text-align: center;
        font-family: Arial, sans-serif;
        font-weight: normal;
    }

    .reportHeaderCntr th {
        border: 0.5px solid #ccc;
        padding: 0 5px;
        margin: 0;
        font-size: 8px;

    }

    .hospitalLogo {
        text-align: center;
        width: 170px;
    }

    .hospitalLogo img {
        margin: 0;
        padding: 0;
        border: none;
        width: 170px;
        height: auto;
    }

    .reportHeaderCntr h4 {
        font-size: 11px;
        margin: 3px 0;
        padding: 0;
    }

    .reportHeaderCntr p {
        margin: 3px 0;
        padding: 0;
    }


    .showFilterValue {
        width: 100%;
    }

    .showFilterValue span {
        font-size: 7px !important;
        font-weight: bold;
        display: inline-block;
        padding: 3px 5px;
        border-left: 1px solid #ccc;
        text-align: left;
    }

    .showFilterValue span:first-child {
        border-left: none;
    }

    .showFilterValue small {
        display: block;
        font-size: 6px !important;
        color: #ccc;
    }
</style>

<body>

    <table class="reportHeaderCntr">
