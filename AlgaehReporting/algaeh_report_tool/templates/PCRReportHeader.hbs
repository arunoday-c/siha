<style type="text/css">
    .reportHeaderCntr {
        width: 100%;
        border-collapse: collapse;
        margin: 0 18px 18px;
        font-family: Arial, sans-serif;
        font-weight: normal;
        font-size: 11px;
        overflow: hidden;
    }

    .col-left {
        float: left;
        width: 70px;
        text-align: left;
    }
    .col-right {
        float: right;
        width: 130px;
        text-align: right;
    }

    .col-center {
        width: calc(100% - 300px);
        text-align:center;
        float: none;
        margin: 0 auto;
    }
    .col-center b.orgArName{
        font-size: 16px!important;
        line-height: 20px;
    }
     .col-center b.orgEnName{
        font-size: 10px!important;
        line-height: 20px;
    }

    .pcrLogo1 img {
        height: 55px;
        border:none;
        float: left;
        text-align: left;
    }

    .pcrLogo2 img {
        height: 55px;
        border:none;
        float: right;
        text-align: right;
    }
    .hospitalLogo img {
        height: 55px;
        border:none;
        float: none;
        text-align: center;
    }

    .reportHeaderCntr h5 {
        margin: 5px 0;
        padding: 0;
        font-size: 11px;
    }

    .reportHeaderCntr p {
        margin: 2px 0;
        padding: 0;
        font-size: 7px;
        line-height: 10px;
    }

    .reportHeaderCntr p b {
        font-size: 8px;
    }


    .headerFooterStyle {
        width: 100%;
        height: 10px;
        float: left;
        text-align: center;
        border-top: 0.5rem dotted #ccc;
        font-size: 8px;
        margin-top: 5px;
    }
</style>

<body>

    <div class="reportHeaderCntr">
        <div class="col-left">
          <span class="pcrLogo1"><img src="{{logoUrl 'PCR_ORG' identity }}" /></span>
        </div>
        <div class="col-right">
            <span class="pcrLogo2"><img src="{{logoUrl 'PCR' identity }}" /></span>
        </div>
        <div class="col-center"> <p><b class="orgArName">{{legal_name}}</b></p>
           <p><b  class="orgEnName">{{organization_name}}</b></p>
           
        </div>
