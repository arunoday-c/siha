{{{importStyle 'css/creditinvoice.css'}}}

<body>
    <div class="print-body">

        <section>
            <table class="tableForLabel" cell-padding="0">
            <tr><td colspan="4"><label class="textEnLft">TRN No.</label>:<span class="valueText">{{header.tax_number}}</span><label class="textArRht">رقم تسجيل ضريبة القيمة المضافة </label></td></tr>
                 
 <tr>
                    <td colspan="4" style="background:#f2f2f2;height:0px;"></td>
                </tr>
                <tr><td><label class="textEnLft">Invoice No</label>:<span class="valueText">{{header.invoice_number}}</span><label class="textArRht">رقم الفاتورة</label></td><td><label class="textEnLft">Invoice Date</label>:<span class="valueText">{{header.invoice_date}}</span><label class="textArRht">اريخ الفاتورة</label></td></tr>
                 <tr><td><label class="textEnLft">Patient Name</label>:<span class="valueText">{{header.patient_full_name}}</span><label class="textArRht">اسم المريض</label></td><td><label class="textEnLft">Visit Date</label>:<span class="valueText">Show Visit Date here</span><label class="textArRht">تاريخ الزيارة</label></td></tr>
                <tr><td><label class="textEnLft">MR No</label>:<span class="valueText">{{header.patient_code}}</span><label class="textArRht">رقم التسجيل</label></td><td><label class="textEnLft">Reg. Date</label>:<span class="valueText">{{header.invoice_date}}</span><label class="textArRht">تاريخ التسجيل</label></td></tr>
                 <tr>
                    <td colspan="4" style="background:#f2f2f2;height:0px;"></td>
                </tr>
               <tr><td><label class="textEnLft">Doctor</label>:<span class="valueText">{{header.full_name}}</span><label class="textArRht">طبيب</label></td><td><label class="textEnLft">Department</label>:<span class="valueText">{{header.sub_department_name}}</span><label class="textArRht">قسم</label></td></tr>
               
            </table>


        </section>
        <section>
            <table class="tableForData" cell-padding="0">
                <thead>
                    <tr>
                        <th>Item Code<p>رمز الصنف</p></th>
                        <th>Item Desc.<p>وصف السلعة</p></th>
                        <th>Qty<p>كمية</p></th>
                        <th>Unit Price<p>المجموع الصافي</p></th>
                        <th>Gross Amount<p>المبلغ الإجمالي</p></th>
                        <th>Discount<p>خصم</p></th>
                        <th>Net Amt. <p>المبلغ الصافي</p></th>
                        <th>Vat Amt. <p>قيمة الضريبة</p></th>
                        <th>Net/Claim Amt.<p>صافي / مبلغ المطالبة</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each detail}}
                    {{!-- <tr>
                        <td colspan="10" class="tableSubHdg">{{service_type}}/{{arabic_service_type}}</td>
                    </tr> --}}
                    <tr>
                       <td>{{service_code}}</td>
                        <td>{{service_name}}</td>
                        <td>{{quantity}}</td>
                        <td class="numberFld">{{net_amount}}</td>
                        <td class="numberFld">{{net_amount}}</td>
                          <td class="numberFld">{{price}}</td>
                          <td class="numberFld">{{patient_resp}}</td>
                          <td class="numberFld">{{patient_tax}}</td>
                          <td class="numberFld">{{patient_payable}}</td>
                    </tr>
                    {{/each}}
  <tr class="footerTotal">
      <td colspan="3" class="numberFld"><span style="text-align:right">Total</span></td>
                          <td class="numberFld">0.00</td>
                         <td class="numberFld">0.00</td>
                          <td class="numberFld">0.00</td>
                          <td class="numberFld">0.00</td>
                          <td class="numberFld">0.00</td>
                          <td class="numberFld">0.00</td>
                    </tr>


                </tbody>
            </table>
        </section>
        {{!-- <footer>{{{loadPage 'doctor_signature_footer.hbs' header}}}</footer> --}}
    </div>
</body>
