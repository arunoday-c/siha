{{{importStyle 'css/algaehReportStyles.css'}}}

<body>
    <div class="print-body">
        <section>
            <table class="tableForData" cell-padding="0">
                <thead>
                    <tr>
                        <th width="">Date</th>
                        <th width="">Voucher Type</th>
                        <th width="">Voucher No.</th>
                        <th width="">Debit Amt</th>
                        <th width="">Credit Amt</th>
                    </tr>
                </thead>
                <tbody>
                    <tr><td>{{account_name}}</td></tr>
        {{#each details}}
                    <tr>
                        <td class="">{{transaction_date}}</td>
                        <td class="">{{voucher_type}}</td>
                        <td class="">{{voucher_no}}</td>
                        <td class="numberFld ">{{debit_amount}}</td>
                        <td class="numberFld ">{{credit_amount}}</td>
                    </tr>
                  
             {{/each }}  

                    <tr class="numberFld ">
                        <td class="numberFld" colspan="3"></td>
                        <td class="numberFld">{{total_debit}}</td>
                        <td class="numberFld">{{total_credit}}</td>
                    </tr>
                    <tr class="numberFld ">
                        <td class="numberFld" colspan="3">Closing Balance</td>
                        <td class="numberFld"></td>
                        <td class="numberFld">CL amount</td>
                    </tr>
                    <tr class="numberFld numberFldTotalBottom">
                        <td class="numberFld" colspan="3"></td>
                        <td class="numberFld">{{total_debit}}</td>
                        <td class="numberFld">{{total_credit}}</td>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>
</body>