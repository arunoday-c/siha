{{{importStyle 'css/algaehReportStyles.css'}}}
<body>
    <div class="print-body">
        {{!-- <p style="text-align: center;">
            <b> Selected Date Range : {{from_date}} ~ {{to_date}} </b></p>
            <hr/> --}}
        <section>
            <table class="tableForDataNoBorder" cell-padding="0">
                <thead>
                    <tr>
                        <th width=""  class="txtFld">Date</th>
                        <th width=""  class="txtFld">Voucher Type</th>
                        <th width=""  class="txtFld">Voucher No.</th>
                        <th width="" class="numberFld ">Debit Amt</th>
                        <th width="" class="numberFld ">Credit Amt</th>
                        <th width="" class="numberFld ">Closing Balance</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="5" class="txtFld">{{account_name}} / {{ledger_code}}</td>
                    </tr>

                    <tr class="numberFld ">
                        <td class="numberFld" colspan="5">Opening Balance</td>
                        <td class="numberFld" ><b>{{opening_balance}}</b></td>
                    </tr>
                    {{#each details}}
                    <tr>
                        <td  class="txtFld">{{payment_date}}</td>
                        <td  class="txtFld">{{voucher_type}}</td>
                        <td  class="txtFld">{{voucher_no}}</td>
                        <td class="numberFld ">{{debit_amount}}</td>
                        <td class="numberFld ">{{credit_amount}}</td>
                        <td class="numberFld ">{{row_closing_balance}}</td>
                    </tr>

                    {{/each }}

                    <tr class="numberFld ">
                        <td class="numberFld" colspan="3"></td>
                        <td class="numberFld">{{total_debit}}</td>
                        <td class="numberFld">{{total_credit}}</td>
                    </tr>
                    {{!-- <tr class="numberFld ">
                        <td class="numberFld" colspan="3">Closing Balance</td>
                        <td class="numberFld">{{CB_debit_side}}</td>
                        <td class="numberFld">{{CB_credit_side}}</td>
                    </tr> --}}
                    <tr class="numberFld ">
                        <td class="numberFld" colspan="5">Closing Balance</td>
                        <td class="numberFld" ><b>{{closing_balance}}</b></td>
                    </tr>
                    {{!-- <tr class="numberFld numberFldTotalBottom">
                        <td class="numberFld" colspan="3"></td>
                        <td class="numberFld">{{final_balance}}</td>
                        <td class="numberFld">{{final_balance}}</td>
                    </tr> --}}
                </tbody>
            </table>
        </section>
    </div>
</body>