                        <td datatype="string">{{inc @index}}</td>
                        <td  datatype="string">{{invoice_date}}</td>
                        <td = datatype="string">{{voucher_type}}</td>
                        <td  datatype="string">{{invoice_no}}</td>
                        <td class="numberFld">{{numberFormating balance_amount ../currencyOnly}}</td>
                        {{!-- <td class="numberFld">{{due_date}}</td> --}}
                        <td class="numberFld">{{numberFormating invoice_amount ../currencyOnly}}</td>
                        <td class="numberFld">{{numberFormating settled_amount ../currencyOnly}}</td>
                        <td class="numberFld">{{numberFormating settled_amount ../currencyOnly}}</td>
                        <td >{{invoice_status}}</td>
                        <td class="numberFld">{{numberFormating balance_amount ../currencyOnly}}</td>
                    </tr>
                    {{/each }}
