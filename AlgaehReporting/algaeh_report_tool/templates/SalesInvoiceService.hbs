        </section>
        <section>
            <table class="tableForData" cell-padding="0">
                <thead>
                    <tr>
                        <th>Sl No.</th>
                        <th>Service Name/اسم الخدمة</th>
                        <th>Quantity/ الكمية</th>
                        <th>Rate/ سعر الوحدة</th>
                        <th>Vat %/ الضريبة</th>
                        <th>Amount/ الإجمالي</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each detailList}}
                    <tr>
                        {{!-- <td>{{../currency.decimal_places}}</td> --}}
                        <td>{{inc @index}}</td>
                        <td>{{service_name}} - {{comments}} <br /> {{arabic_service_name}} - {{arabic_comments}}</td>

                        <td>{{quantity}}</td>
                        <td class="numberFld">
                            {{numberFormating unit_cost ../currency}}
                        </td>
                        <td>{{tax_percentage}}%</td>
                        <td class="numberFld">{{numberFormating total_amount ../currency}}</td>
                        {{!-- <td>{{arabic_service_name}}</td> --}}
                    </tr>
                    {{/each }}</tbody>
            </table>
        </section>

        <section>
            <table class="tableForData" cell-padding="0">
                {{!-- <td colspan="9">Net Total</td>
                    <td class="numberFld">{{net_payable}}</td> --}}
                <tr class="footerTotalDown">
                    <td class="textEngLft" style="width:10%">Total Amount Before VAT</td>
                    <td colspan="7" class="textArbRht" style="width:50%">{{amount_before_vat}}</td>
                    <td class="textArbRht" style="width:10%">الإجمالى قبل ضريبة القيمه المضافة</td>
                </tr>
                <tr class="footerTotalDown">
                    <td class="textEngLft" style="width:10%">Discount</td>
                    <td colspan="7" class="textArbRht" style="width:50%">{{netdiscount_amount}}</td>
                    <td class="textArbRht" style="width:10%">خصم</td>
                </tr>
                <tr class="footerTotalDown">
                    <td class="textEngLft" style="width:20%">VAT for non-exempt Items</td>
                    <td colspan="7" class="textArbRht" style="width:60%">{{total_tax}}</td>
                    <td class="textArbRht" style="width:20%">قيمة الضريبة المضافة </td>
                </tr>
                <tr class="footerTotalDown">
                    <td class="textEngLft" style="width:20%">Total Including VAT</td>
                    <td colspan="7" class="textArbRht" style="width:60%">{{net_payable}}</td>
                    <td class="textArbRht" style="width:20%">الإجمالي بعد ضريبة القيمة المضافة</td>
                </tr>
                <tr class="footerTotalDown">
                    <td class="textEngLft" style="width:20%">Retention Amount</td>
                    <td colspan="7" class="textArbRht" style="width:60%">{{retention_amt}}</td>
                    <td class="textArbRht" style="width:20%">مبلغ الاحتفاظ</td>
                </tr>

                <tr class="footerTotalDown">
                    <td class="textEngLft" style="width:20%">Outstanding Balance</td>
                    <td colspan="7" class="textArbRht" style="width:60%">{{outstanding_balance}}</td>
                    <td class="textArbRht" style="width:20%">الرصيد المستحق بالريال السعودي</td>
                </tr>
                </tbody>
            </table>
        </section>
        <section>
            <table class="tableForLabel" cell-padding="0">
                <tr>
                    <td>Narration:<span class="valueText"> {{narration}}</span>
                    </td>
                </tr>
            </table>

        </section>
        {{!-- <section>
            <p>Finance Manager</p>
            <div style="width: 30%; height:50px; border-bottom:1px solid #000"></div>
        </section> --}}
        <section class="footerInfoSection">
            <p><b>Bank Information</b></p>
            <p>{{organization_name}}</p>
            <p>Bank Name: {{bank_name}}</p>
            <p>IBAN: {{bank_account_no}}</p>
        </section>
    </div>
