{{{importStyle 'css/creditinvoice.css'}}}

<body>
    <div class="print-body">

        <section>

            <table class="tableForLabel" cell-padding="0">

                <tr>
                    <td><label class="textEnLft">Purchase No</label>:<span class="valueText">{{purchase_number}}</span>
                    </td>
                    <td><label class="textEnLft">delivery Date</label>:<span class="valueText">{{dn_date}}</span></td>
                </tr>
                <tr>
                    <td colspan="4" style="background:#f2f2f2;height:0px;"></td>
                </tr>
                <tr>
                    <td><label class="textEnLft">Purchase For</label>:<span
                            class="valueText">{{location_description}}</span></td>
                    <td><label class="textEnLft">Vendor Name</label>:<span class="valueText">{{vendor_name}}</span></td>
                </tr>

                <tr>
                    <td><label class="textEnLft">delivery_note_number</label>:<span
                            class="valueText">{{delivery_note_number}}</span></td>
                    <td><label class="textEnLft">po_date</label>:<span class="valueText">{{po_date}}</span></td>
                    <td><label class="textEnLft">net_payable</label>:<span class="valueText">{{net_payable}}</span></td>
                </tr>

            </table>


        </section>
        <section>
            <table class="tableForData" cell-padding="0">
                <thead>
                    <tr>
                        <th>Sl No.</th>

                        <th>Vendor Batch No.</th>

                        <th>PO Quantity</th>
                        <th>Unit Cost</th>
                        <th>Sales Price</th>
                        <th>Discount %</th>
                        <th>Discount Amt.</th>
                        <th>Net Ext. Cost</th>
                        <th>Tax Amt.</th>
                        <th>Total Amt.</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each details}}
                    <tr>
                        <td colspan="9" class="tableSubHdg">Item Code: {{item_code}}</td>
                        <td colspan="9" class="tableSubHdg">Item Name:{{item_description}} </td>
                        <td colspan="9" class="tableSubHdg">Purchase UOM:{{uom_description}}</td>
                        <td colspan="9" class="tableSubHdg">Req. Qty:{{po_quantity}}</td>
                        <td colspan="9" class="tableSubHdg">Deliverd Qty:{{dn_quantity}}</td>
                        <td colspan="9" class="tableSubHdg">Quantity recieved_todate:{{quantity_recieved_todate}}</td>
                        <td colspan="9" class="tableSubHdg">Out Standing Qty:{{quantity_outstanding}}</td>
                    </tr>
                    {{#each batches}}
                    <tr>
                        <td>{{inc @index}}</td>

                        <td>{{batchno}}</td>
                        <td>{{po_quantity}}</td>

                        <td>{{unit_cost}}</td>
                        <td>{{sales_price}}</td>
                        <td>{{discount_percentage}}</td>
                        <td>{{discount_amount}}</td>

                        <td>{{net_extended_cost}}</td>
                        <td>{{tax_amount}}</td>
                        <td>{{total_amount}}</td>
                    </tr>
                    {{/each }}

                    {{/each }}
                </tbody>
            </table>
        </section>
        {{!-- <footer>{{{loadPage 'doctor_signature_footer.hbs' header}}}</footer> --}}
    </div>
</body>