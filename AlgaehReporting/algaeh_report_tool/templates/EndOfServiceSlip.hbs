{{{importStyle 'css/algaehReportStyles.css'}}}

<body>
    <div class="print-body" style="page-break-before: always; page-break-after: always; margin-right:15px">
        <section>
            <table class="tableForLabel labelBlock" cell-padding="0">

                <tr>
                    <td><label class="textEnLft">Branch: </label><span class="valueText">{{hospital_name}}</span></td>
                    <td><label class="textEnLft">Employee Code:</label><span class="valueText">{{employee_code}}</span>
                    </td>
                    <td colspan="2"><label class="textEnLft">Employee Name:</label><span
                            class="valueText">{{full_name}}</span></td>
                </tr>
                <tr>
                    <td><label class="textEnLft">Date of Birth:</label><span class="valueText">{{date_of_birth}}</span>
                    </td>

                    <td><label class="textEnLft">Gender: </label><span class="valueText">
                            {{sex}}</span></td>

                    <td><label class="textEnLft">Designation:</label><span class="valueText">{{designation}}</span></td>

                    <td><label class="textEnLft">Sub Department: </label><span class="valueText">
                            {{sub_department_name}}</span></td>


                </tr>
                <tr>
                    <td><label class="textEnLft">Date of Joining</label><span
                            class="valueText">{{date_of_joining}}</span>
                    <td><label class="textEnLft">Date of Exit:</label><span class="valueText">{{exit_date}}</span>
                    </td>
                    <td><label class="textEnLft">Years of Service:</label><span
                            class="valueText">{{service_years}}</span>
                    </td>
                    <td><label class="textEnLft">Days of Service:</label><span class="valueText">{{payable_days}}</span>
                    </td>
                </tr>
                <tr>
                    <td><label class="textEnLft">Exit Type:</label><span class="valueText">{{exit_type}}</span></td>
                    <td><label class="textEnLft">End of Service No:</label><span
                            class="valueText">{{end_of_service_number}}</span></td>

                    <td colspan="2"><label class="textEnLft">Status & Date:</label><span
                            class="valueText">{{gratuity_status}} /
                            {{transaction_date}}</span></td>
                    {{!-- <td><label class="textEnLft">Settlemnt Date:</label><span class="valueText"></span>
                    </td> --}}
                </tr>

            </table>
        </section>


        <table class="tableForData">
            <tr class="footerTotalUp">
                <td class="numberFld">Calculated Gratuity</td>
                <td class="numberFld" width="29.5%" colspan="3">{{total_gratutity_amount}}</td>
            </tr>

            <tr class="footerTotalUp">
                <td class="numberFld">Encashed Gratuity</td>
                <td class="numberFld" colspan="3">(-) {{gratuity_encash}}</td>
            </tr>
            <tr class="footerTotalUp">
                <td class="numberFld">Net Gratuity</td>
                <td class="numberFld" width="29.5%" colspan="3">{{calculated_gratutity_amount}}</td>
            </tr>
            <tr class="footerTotalDown">
                <td class="numberFld">Final Payable Amount.</td>
                <td class="numberFld" colspan="3">{{payable_amount}}</td>
            </tr>
            <tr class="footerTotalDown">
                <td class="numberFld">In Words</td>
                <td class="numberFld salaryWord" colspan="3">{{salary_in_words}}
                </td>
            </tr>
        </table>
        </section>
        <br /><br />
        <section>
            <table class="tableForLabelSignature labelBlock" cell-padding="0">
                <tr>
                    <td width="50%">
                        <p style="height: 20px">I hereby confirm the above to be correct and have no claim on my
                            Gratuity.</p>

                        <span>{{full_name}}</span>
                        <span>{{employee_code}}</span>
                        <small>{{designation}}</small>
                        <br />
                        <b class="signArea"></b>
                    </td>
                    <td width="50%" class="numberFld">
                        <p style="height: 20px">أؤكد بموجب هذا ما سبق أن يكون صحيحا وليس لدي أي مطالبة على إكرامتي</p>
                        <span>{{arabic_name}}</span>
                        <span>{{employee_code}}</span>
                        <small>{{designation}}</small>
                        <br />
                        <b class="signArea"></b>
                    </td>
                </tr>


            </table>
        </section>
        <p style="text-align: center">This is a system generated payslip on {{currentDateTime 'date'}}. </p>
    </div>
</body>