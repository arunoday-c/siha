{{{importStyle 'css/creditinvoice.css'}}}

<body>
    <div class="print-body">

        <section>
            <table class="tableForData" cell-padding="0">
                <thead>
                    <tr>
                        <th>Sl No.</th>
                        <th>Appo. Date</th>
                        <th>Appo. Time (From - To)</th>
                        <th>Patient Code</th>
                        <th>Patient Name</th>
                        <th>Patient Age (yrs)</th>
                        <th>Appo. Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each groupdetails}}
                    <tr>
                        <td colspan="7" class="tableSubHdg">{{doctor_name}} | {{doctor_code}} <small
                                style="float:right">Total - Checked
                                In:{{checked_in}} | Cancelled:{{cancel}} | No Show:{{no_show}}</small></td>
                    </tr>
                    {{#each details}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td>{{appointment_date}}</td>
                        <td>{{appointment_from_time}} - {{appointment_to_time}}</td>
                        <td>{{patient_code}}</td>
                        <td>{{patient_name}}</td>
                        <td>{{age}}</td>
                        <td>{{app_status}}</td>
                    </tr>
                    {{/each }}
                    {{/each }}
                </tbody>
            </table>
        </section>
        {{!-- <footer>{{{loadPage 'doctor_signature_footer.hbs' header}}}</footer> --}}
    </div>
</body>