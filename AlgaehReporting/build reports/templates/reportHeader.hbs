<style type="text/css">
    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    table {
        width: 100%;
        border-bottom: 1px solid #ccc;
    }

    .hospitalLogo {
        color: #ccc;
        text-align: center;
        width: 100%;
    }

    .hospitalLogo img {
        margin: 0;
        padding: 0;
        border: none;
        height: 40px;
        margin-top:-10px; 
    }

    .otherInfo {
        text-align: right;
        font-size: 9px!important;
        width: 100%;
    }

    .hospitalAddress {
        text-align: center;
    }

    .hospitalAddress h4 {
        margin:0;
        padding: 0;
        font-size: 15px;
    }

    .hospitalAddress p {
        margin: 0;
        padding: 0;
        line-height: 15px;
        font-weight: normal;
        font-size: 8px;
    }
</style>

<body>

    <table>

        <tbody>

            <tr>
                <td class="hospitalLogo"><img
                        src="{{imageSource 'images/clientLogo.png'}}" />
                </td>
               
            </tr>
            <tr> <td class="hospitalAddress">
                    <h4>{{{report_name_for_header}}}</h4>
                    <p>{{hospital_address}}</p>
                    <p>Date: {{currentDateTime 'date'}}</p>
                    {{!-- Print By:{{capitalization user_name}}  --}}
                </td></tr>
        </tbody>
    </table>
</body>